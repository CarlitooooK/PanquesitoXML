<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PanquesitoXML"/>
    <style name="PanquesitoXML.TextStyle">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="fontFamily">@font/madani</item>
    </style>

    <style name="PanquesitoXML.TextStyle.Title">
        <item name="android:textSize">@dimen/large_text</item>
    </style>

    <style name="PanquesitoXML.TextStyle.Subtitle">
        <item name="android:textColor">@color/color_subtitle</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="PanquesitoXML.TextStyle.Link">
        <item name="android:textStyle">bold</item>
        <item name="android:color">@color/verde_planta</item>
    </style>


</resources>